<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    >

    <TextView
        android:id="@+id/InputDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24"
        />

    <TextView
        android:id="@+id/ResultDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11.25"
                >
                <Button
                    android:id="@+id/B7"
                    android:text="7"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75" />
                <Button
                    android:id="@+id/B8"
                    android:text="8"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
                <Button
                    android:id="@+id/B9"
                    android:text="9"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11.25"
                >
                <Button
                    android:id="@+id/B4"
                    android:text="4"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75" />
                <Button
                    android:id="@+id/B5"
                    android:text="5"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
                <Button
                    android:id="@+id/B6"
                    android:text="6"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11.25">
                <Button
                    android:id="@+id/B1"
                    android:text="1"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75" />
                <Button
                    android:id="@+id/B2"
                    android:text="2"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
                <Button
                    android:id="@+id/B3"
                    android:text="3"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11.25">
                <Button
                    android:id="@+id/B0"
                    android:text="0"
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75" />
                <Button
                    android:id="@+id/BDot"
                    android:text="."
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
                <Button
                    android:id="@+id/BEqual"
                    android:text="="
                    android:textSize="34dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.75"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/BDelete"
                android:text="DEL"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/BDivide"
                android:text="÷"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/BMultiply"
                android:text="×"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/BSubtract"
                android:text="−"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/BAdd"
                android:text="+"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>